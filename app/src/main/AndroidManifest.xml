<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coincounterjd">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/coincalc_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/coincalc_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoinCounterJD">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.CoinCounterJD.NoActionBar.SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CoinCounterJD.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    </application>

</manifest>